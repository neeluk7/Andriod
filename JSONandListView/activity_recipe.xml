<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.recipes.RecipeActivity">

<ScrollView android:id="@+id/ScrollView" android:layout_height="fill_parent" android:layout_width="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.recipes.RecipeActivity">

    <TextView
        android:id="@+id/recipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="TextView"
        android:textSize="100px"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_margin="15dp"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="8dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/recipeName"
        android:layout_centerHorizontal="true"
        android:id="@+id/img" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="250dp"
        android:textSize="60px"
        android:textColor="#4169e1"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/img"
        android:layout_below="@+id/img"
        android:layout_marginTop="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/ingredients"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textSize="60px"
        android:textColor="#9370db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorName"
        android:text="TextView" />

    <TextView
        android:id="@+id/dietLabels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60px"
        android:textColor="#9370db"
        android:textAlignment="center"
        android:layout_below="@+id/ingredients"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/healthLabels"
        android:textAlignment="center"
        android:textSize="60px"
        android:textColor="#9370db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dietLabels"
        android:layout_margin="15dp"
        android:text="TextView" />

    <!--android:scrollbars="vertical"-->

    <TextView
        android:id="@+id/nutrients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="60px"
        android:textColor="#9370db"
        android:layout_below="@+id/healthLabels"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="TextView" />

</RelativeLayout>
</ScrollView>
</RelativeLayout>